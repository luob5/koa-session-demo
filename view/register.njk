{% extends "base.njk" %}
{% block mainbody %}
  <div class="row">
    <form method="post" class="col-md-4 mx-auto p-5 rounded" style="margin-top: 120px; background-color: rgba(0,0,0,0.05);">
      <div class="form-group">
        <label for="user">用户名</label>
        <input name="username" type="text" class="form-control" id="user">
      </div>
      <div class="form-group">
        <label for="userpass">密码</label>
        <input name="userpass" type="text" class="form-control" id="userpass">
      </div>
      <div class="form-group">
        <label for="userinfo">其他信息</label>
        <textarea class="form-control" name="userinfo" id="userinfo" rows="2"></textarea>
      </div>
      <button type="submit" class="btn btn-primary btn-block">注册</button>
      {% if error %}
        <p class="text-danger">注册失败</p>
      {% endif %}
    </form>
  </div>
{% endblock %}